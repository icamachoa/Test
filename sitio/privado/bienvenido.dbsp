	<script type="text/javascript" src="../scripts/basicos/popup.js"></script>
	<script>
	
		 var Enviado = "Enviado";
			 var Video = "video"; 
			  var AlertaVideoTour = {
			     video : function(iframe){
			     	var gap     = 20;
					var boxH    = $(window).height() - gap;    
					var boxW    = $(window).width() - gap * 2;
					         $.fallr('show', {
			                      buttons : {
			                          button1 : {text: 'Cerrar'}
			                      },
			                      content : iframe,
			                       position: 'center',
			                       closeKey : true,
			                       width   : boxW,
    							   height  : boxH
			                  });
			            }
	};
	
	
	$(document).ready(function(){
		self.parent.CambiarFondo();
		CargarContenido("bienvenido_1.dbsp","­Bienvenido!","Pantalla1",1);
	});
	
		$(".Pantalla1").live("click",function(){
			CargarContenido("bienvenido_1.dbsp","­Bienvenido!","Pantalla1",1);
		});
		
		$(".Pantalla2").live("click",function(){
			CargarContenido("bienvenido_2.dbsp","Nuevos elementos en tu pantalla de inicio","Pantalla2",2);
		});
		
		$(".Pantalla3").live("click",function(){
			CargarContenido("bienvenido_3.dbsp","Ahorra tiempo con la selección múltiple","Pantalla3",3);
		});
		
		$(".Pantalla4").live("click",function(){
			CargarContenido("bienvenido_4.dbsp","Enviar correos nunca ha sido tan rápido","Pantalla4",4);
		});
		
		$(".Pantalla5").live("click",function(){
			CargarContenido("bienvenido_5.dbsp","Conoce la nueva sección de metas","Pantalla5",5);
		});
		
		$(".Pantalla6").live("click",function(){
			CargarContenido("bienvenido_6.dbsp","Campos personalizables","Pantalla6",6);
		});

		$(".Pantalla7").live("click",function(){
			CargarContenido("bienvenido_7.dbsp","Nos gusta consentirte con detalles","Pantalla7",7);
		});
		
		$(".Pantalla8").live("click",function(){
			CargarContenido("bienvenido_8.dbsp","Antes de terminar te invitamos a nuestro  Video Tour.","Pantalla8",8);
		});
		
		$(".video").live("click",function(){
			var frame = $(this).attr("rel");
			frame='<div id="loadingsalesup"><img src="../imagenes/loadingsalesup.png" /></div>'+frame;
			AlertaVideoTour[Video].apply(this,[frame]);
			setTimeout(function(){$("#fallr-icon").remove();},500);
			setTimeout(function(){ $('#loadingsalesup').remove();  }, 2000);
		});			
		
		$("#CerrarBienvenido").live("click",function(){
			if ($("#CerrarBienvenido").is(':checked')){$.post("ocultar-bienvenida.dbsp?ban=1");}
			else{$.post("ocultar-bienvenida.dbsp?ban=0");}
		});
		
		
		$("#btnCancelar").live("click",function(){
			self.parent.tb_remove();
		});
				
		function CargarContenido (pagina,titulo,id,inicia){
			var direccion = '/privado/ajax/'+pagina;
				$.ajaxSetup({
					  'beforeSend' : function(xhr) {
					  xhr.overrideMimeType('text/html; charset=iso-8859-1');
					  }
					});
			
			$.ajax({ async : false, cache : false, dataType : 'html',
					url : direccion,
					success : function(data) {
						$('#CargaBienvenido').html(data);
						$("#BienvenidoTop h1").html(titulo);
						$('button, input:submit', 'form').button();
						$("img."+id).addClass("seleccionado");
						setTimeout(function(){
							$('#mycarousel').jcarousel({
	    					start: inicia,
	    	 				visible: 4
	    					});
						},1800);
					}
				});
		}
	</script>
