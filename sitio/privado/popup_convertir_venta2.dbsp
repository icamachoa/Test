function Recalcula_Montos_Comisiones() {
	var ccc=String($('#comision_monto').val());
	var elmontoparcial=0	
	var $frmVenta = $('#frmVenta');
	$('.corto1a').attr('readonly','readonly');
	var x = SalesUp.Sistema.quitarFormatoNumero($frmVenta.find('#noexhibiciones').val());
	x = parseInt (x)+1;

	var Com_modo = SalesUp.Sistema.quitarFormatoNumero($frmVenta.find('#comision_modo').val());
	Com_modo = parseInt (Com_modo);
   
	var MontoTotal = SalesUp.Sistema.quitarFormatoNumero($frmVenta.find('#monto').val());
	MontoTotal = parseFloat (MontoTotal);
	var comisionMonto = SalesUp.Sistema.quitarFormatoNumero($frmVenta.find('#comision_monto').val());
	// --------- Montos -----------------
   
	// Sumar los fijos....
	var MontoFijo=0;
	for (i=1; i<=NumPagosGobal; i++) {
		if (Fijos[i-1]==1){
			MontoFijo+= SalesUp.Sistema.quitarFormatoNumero($('#pago'+i).val());
		};
	}
	// Calcula los subsecuentes...

	if (MontoFijo<MontoTotal){
		var PagoSubsecuente = roundNumber((MontoTotal - MontoFijo) / (x - 1- NoFijos()),2);
	}else{
		var PagoSubsecuente = 0
	}   

	// Cambia los montos subsecuentes...
	for (i=1; i<=NumPagosGobal; i++) {
		if (Fijos[i-1]==0) {
			if (i<x) {    
				var new_pago = String(PagoSubsecuente);
				$('#pago'+i).val(SalesUp.Sistema.formatoNumero(new_pago));
				elmontoparcial+= SalesUp.Sistema.quitarFormatoNumero ($('#pago'+i).val());
			}else{
				$('#pago'+i).val('0'); 
			}
		}
	}
	if (MontoFijo<MontoTotal){   
		if (elmontoparcial>(MontoTotal-MontoFijo)){
			$('#pago1').val(SalesUp.Sistema.formatoNumero(SalesUp.Sistema.quitarFormatoNumero($('#pago1').val())-(elmontoparcial-(MontoTotal-MontoFijo))));
		}else{
			$('#pago1').val(SalesUp.Sistema.formatoNumero(SalesUp.Sistema.quitarFormatoNumero($('#pago1').val())+((MontoTotal-MontoFijo)-elmontoparcial)));
		}
	}
	// ----------- Comisiones ------------
   
   	//calcula el porcentaje real de la comision para evitar problemas con los decimales
   	pct = (comisionMonto/MontoTotal);
  	//

	for (i=1; i<=NumPagosGobal; i++) {
		if (Com_modo==0) {
			//comsiones prorateadas   
			pago = SalesUp.Sistema.quitarFormatoNumero($('#pago'+i).val());
