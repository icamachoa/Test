SalesUp.Variables.ValidaNumeros = function(){

	$('input.numero').keyup(function(){ 
		this.value = this.value.replace(/[^0-9]/g, '');	
	}).blur(function(){
		this.value = this.value.replace(/[^0-9]/g, '');	
	});

	$('input.decimal').keyup(function(){ 
		var v = this.value;
		($.isNumeric(v)) ? $(this).val(v) : $(this).val('');
	}).blur(function(){
		var v = this.value;
		($.isNumeric(v)) ? $(this).val(v) : $(this).val('');
	});
}/*Valida numeros*/

