          <#/IF>
          <option value="3" <#IF EXPRESSION="FILTROSELECTED=3">selected<#/IF>>Por líneas de producto</option>
          <option value="4" <#IF EXPRESSION="FILTROSELECTED=4">selected<#/IF>>Por origen</option>
          <option value="5" <#IF EXPRESSION="FILTROSELECTED=5">selected<#/IF>>Por país</option>
          <option value="6" <#IF EXPRESSION="FILTROSELECTED=6">selected<#/IF>>Por región</option>
          <option value="7" <#IF EXPRESSION="FILTROSELECTED=7">selected<#/IF>>Por ciudad</option>
       </select>
       <#IF EXPRESSION="(SESSION.NIVEL=1) & (FILTROSELECTED=1)">
		<label for="FiltroTipo2">Grupos:</label>
