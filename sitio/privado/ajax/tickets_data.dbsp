<!--  ***** paginacion ******  -->

<table class="simple">
	<thead>
		<tr>
			<td style="width: 1%;" class="centrado"></td>
			<td class="centrado">No Ticket</td>
			<td class="centrado" style="width: 200px;">Asunto</td>
