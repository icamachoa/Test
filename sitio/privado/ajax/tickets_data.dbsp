		</tr>
	</thead>
	<tbody>
		<!--  ***** paginacion ******  -->
		<#SETCOOKIE NAME="ROWCOUNT" VALUE="<#START/>"/>
		<#DATASET ALIAS="SALESUPXP" SQLFILE="Tickets/Query914-Seleccionar_tickets.sql" POSITION="<#START/>" LENGTH="<#HOWMANY/>">
		<#SETCOOKIE NAME="ROWTYPE" EXPRESSION="ROWCOUNT%2"/> 
