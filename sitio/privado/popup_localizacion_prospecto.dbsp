<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <style type="text/css">
      html { height: 100% }
      body { height: 100%; margin: 0; padding: 0 }
      #map_canvas { height: 100% }
      .fechaContacto{
        font-weight: normal;
        color: #ccc;
      }
    </style>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAx005x1GhlgSw2P6RcaZ1099YsIoTSWvg&sensor=false">
    </script>
    <script type="text/javascript">
      function initialize() {

        <#IF EXPRESSION="IDPROSPECTO=0">
          <#DATASET ALIAS="SALESUPXP" SQLFILE="Distribuidores/Panel Maestro/Query540-Emails_sin_enviar.sql">
            var direccion = '<#DIRECCION/>';
            var nombre = "<#NOMBRE/>";
            var telefono = '<#TELEFONO/>';
            var url = '<#URL/>'

            var contentString = '<div id="content">'+
              '<h3 id="firstHeading" class="firstHeading">'+nombre+' <span class="fechaContacto"></br>Teléfono: '+telefono+'</br>Dirección: '+direccion+'</span></h3> '+
              '<div id="bodyContent">'+
              '<p>'+url+'</p>'+
              '</div>'+
              '</div>';
          <#/DATASET>
        <#ELSE>

          <#DATASET ALIAS="SALESUPXP" SQLFILE="Estadísticas/Query162-Informacion_basica_de_empresas.sql">
            var direccion = '<#direccion/>';
            var comentario = "<#COMENTARIO/>";
            var nombre = "<#NOMBRE/>";
            var ultimoContacto = "<#ULTIMO_CONTACTO_TIEMPO/>";

            var contentString = '<div id="content">'+
              '<h3 id="firstHeading" class="firstHeading">'+nombre+' <span class="fechaContacto"> - '+ultimoContacto+'</br>'+direccion+'</span></h3> '+
              '<div id="bodyContent">'+
              '<p>'+comentario+'</p>'+
              '</div>'+
              '</div>';
          <#/DATASET>
        <#/IF>

        var geocoder;

        geocoder = new google.maps.Geocoder();

          var latitud = 37.0625;
          var longitud = -95.677068;

        var mapOptions = {
          center: new google.maps.LatLng(latitud,longitud),
          zoom: 16,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map_canvas"),mapOptions);

        var input = latitud+','+longitud;
        var latlngStr = input.split(',', 2);
        var lat = parseFloat(latlngStr[0]);
        var lng = parseFloat(latlngStr[1]);
        var latlng = new google.maps.LatLng(lat, lng);

        var marker = new google.maps.Marker({
          position: map.getCenter(),
          map: map
        });

        geocoder.geocode({'address': direccion}, function(results, status) {
          
          if (status == google.maps.GeocoderStatus.OK) {
            if (results[0]) {
              direccion = results[0].formatted_address;

              map.setCenter(results[0].geometry.location);

              marker.setPosition(results[0].geometry.location);

              var infowindow = new google.maps.InfoWindow({
                  content: contentString,
                  maxWidth: 500,
                  maxheight:300
              });

              infowindow.open(map,marker);
            }
          }
        });
      }
    </script>
  </head>
  <body onload="initialize()">
    <div id="map_canvas" style="width:100%; height:100%"></div>
  </body>
</html>





